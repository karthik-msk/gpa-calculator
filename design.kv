				Button:
					size_hint_y: 1.5
					text: "Flames Calculator"
					font_size: "25sp"
					on_press: app.root.current = 'flames'
				Button:
					size_hint_y: 1.5
					text: "My Coding Journey"
					font_size: "25sp"
					on_press: app.root.current = 'proj'

				Button:
					size_hint_y: 1.5
					font_size: "25sp"
					text: "About"
					on_press: app.root.current = "about"


				Button:
					size_hint_y: 2
					font_size: "30sp"
					text: "Exit"
					background_color: 255/255, 0/255, 0/255, 1
					on_release: app.stop()
