<MainMenu>:
	name: "Wel"
	GridLayout:
		rows: 3
		spacing: 10

		Image:
			size_hint_y: 0.65
			source: "img2.png"
			allow_stretch: True
		GridLayout:
			cols: 3
			GridLayout:
				cols: 1
				Label:
			
			GridLayout:
				size_hint_x: 4.5
				size_hint_y: 1.5
