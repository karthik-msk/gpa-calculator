				cols: 1
				Label:
			
		GridLayout:
			rows: 1
			size_hint_y: 0.25
			Label:
				canvas.before:
					Color:
						rgba: 18/255, 18/255, 18/255, 1
					Rectangle:
						pos: self.pos
						size: self.size

				text: "NOTE : Calculator works only for IT Department"
